<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  
  <servlet>
    <description>第20章 Hibernate 入門</description>
    <display-name>CatServlet</display-name>
    <servlet-name>CatServlet</servlet-name>
    <servlet-class>com.helloweenvsfei.hibernate.servlet.CatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CatServlet</servlet-name>
    <url-pattern>/catServlet</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <description>第23章 Hibernate 高級查詢 - 員工 Servlet</description>
    <servlet-name>EmployeeServlet</servlet-name>
    <servlet-class>com.helloweenvsfei.hibernate.servlet.EmployeeServlet</servlet-class>
    <load-on-startup>1</load-on-startup>   <!-- 啟動後即載入該  Servlet  -->
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeServlet</servlet-name>
    <url-pattern>/servlet/EmployeeServlet</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <description>第23章 Hibernate 高級查詢 - 部門管理Servlet</description>
    <display-name>DepartmentServlet</display-name>
    <servlet-name>DepartmentServlet</servlet-name>
    <servlet-class>com.helloweenvsfei.hibernate.servlet.DepartmentServlet</servlet-class>
    <load-on-startup>1</load-on-startup>  <!-- 啟動後即載入該  Servlet  -->
  </servlet>
  <servlet-mapping>
    <servlet-name>DepartmentServlet</servlet-name>
    <url-pattern>/servlet/DepartmentServlet</url-pattern>
  </servlet-mapping>
  
  
  
  
</web-app>